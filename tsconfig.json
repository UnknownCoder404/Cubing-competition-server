{
  "compilerOptions": {
    "target": "es2022", // Or a suitable target for your Node.js version
    "module": "ESNext", // Or "ES2022" etc. for better compatibility
    "strict": true, // Highly recommended for better type safety
    "esModuleInterop": true, // For better compatibility with CommonJS modules during transition
    "skipLibCheck": true, // Can speed up compilation, but might hide some type errors
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./**/*.ts" // Specify the source files
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}